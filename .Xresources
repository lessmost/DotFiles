Emacs.useXIM: true

! xterm
! look and feel
xterm.termName: xterm-256color
XTerm.Geometry: 82x29+0+0
!xterm*background: rgb:2000/2000/2000
xterm*background: #ffffff
xterm*foreground: #000000

! taken from terminator ambience colro theme
xterm*background: #300a24
xterm*foreground: #ffffff
*color0:     #2e3436
*color1:     #cc0000
*color2:     #4e9a06
*color3:     #c4a000
*color4:     #3465a4
*color5:     #75507b
*color6:     #06989a
*color7:     #d3d7cf
*color8:     #555753
*color9:     #ef2929
*color10:    #8ae234
*color11:    #fce94f
*color12:    #729fcf
*color13:    #ad7fa8
*color14:    #34e2e2
*color15:    #eeeeec

! font
xterm*faceName: Droid Sans Mono:pixelsize=14
xterm*faceNameDoublesize: Adobe Song Std:pixelsize=14:antialias=True
xterm*xftAntialias: true
xterm*cjkWidth: false

! fix alt key input
XTerm*eightBitInput: false
XTerm*metaSendsEscape: true
XTerm*altSendsEscape: true

! disable Alt-Return = Fullscreen
!XTerm.fullscreen: never

! copy and paste
! mouse selectiong to copy, ctrl-v to paste
! Ctrl Alt p to print screen content to file
xterm*printAttributes: 2
xterm*printerCommand: cat > ~/xtermdump
XTerm*VT100.Translations: #override \
    Ctrl Alt <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    Ctrl Alt <KeyPress> P: print() \n


